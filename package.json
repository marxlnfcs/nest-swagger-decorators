{
  "name": "@marxlnfcs/nest-swagger-decorators",
  "private": false,
  "version": "0.0.8",
  "description": "Extended decorators for the @nestjs/swagger module",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "upgrade-packages": "node scripts/upgrade-dependencies.js",
    "generate-index": "rimraf ./src/index.ts && barrelsby --config ./barrelsby.config.json",
    "build": "npm run clean && tsc && node scripts/build-package.js",
    "publish": "npm run build && cd dist && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marxlnfcs/nest-swagger-decorators.git"
  },
  "author": "marxlnfcs",
  "bugs": {
    "url": "https://github.com/marxlnfcs/nest-swagger-decorators/issues"
  },
  "homepage": "https://marxlnfcs.github.io/nest-swagger-decorators/",
  "dependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.7",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "barrelsby": "^2.8.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
